<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tv_order_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8ADAA">

    <ImageView
        android:id="@+id/img_header"
        android:layout_width="480dp"
        android:layout_height="134dp"
        android:layout_marginBottom="580dp"
        android:scaleType="centerCrop"
        android:src="@drawable/header3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="100dp"
        android:text="Quantity :"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_header" />

    <TextView
        android:id="@+id/tv_size_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="20dp"
        android:text="Size        :"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/tv_quantity"
        app:layout_constraintTop_toBottomOf="@+id/tv_quantity" />

    <TextView
        android:id="@+id/tv_size_order_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:text="XS"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_size_order"
        app:layout_constraintStart_toEndOf="@+id/tv_size_order"
        app:layout_constraintTop_toTopOf="@+id/tv_size_order"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/tv_quantity_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="1"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_quantity"
        app:layout_constraintStart_toEndOf="@+id/tv_quantity"
        app:layout_constraintTop_toTopOf="@+id/tv_quantity"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btn_checkOut"
        android:layout_width="205dp"
        android:layout_height="47dp"
        android:layout_marginTop="68dp"
        android:backgroundTint="#FF9999"
        android:fontFamily="@font/advent_pro_semibold"
        android:text="CHECK OUT"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9"
        tools:ignore="TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="16dp"
        android:gravity="center"
        android:text="Click Button Below to Confirm your Order"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_size_order_detail" />

    <ImageButton
        android:id="@+id/img_btn_Email"
        android:layout_width="90dp"
        android:layout_height="42dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_checkOut"
        app:layout_constraintVertical_bias="0.478"
        app:srcCompat="@drawable/ic_baseline_email_24"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />


</androidx.constraintlayout.widget.ConstraintLayout>